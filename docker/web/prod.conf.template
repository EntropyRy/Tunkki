server {
    server_name _;
    root /var/www/symfony/public;

    brotli_static on;
    gzip_static on;
    gzip off;

    client_max_body_size 30M;

    # Primary location: serve existing files, else rewrite to front controller
    location / {
        try_files $uri @rewriteapp;
    }

    # Rewrite everything that isn't a real file to /index.php/<original_path>
    location @rewriteapp {
        rewrite ^(.*)$ /index.php/$1 last;
    }

    # Allow ONLY index.php to execute (internal to prevent direct external calls)
    location ~ ^/index\.php(/|$) {
        fastcgi_pass php-upstream;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        # Ensure real client IP is forwarded to PHP (requires real_ip config in nginx.conf)
        fastcgi_param REMOTE_ADDR $realip_remote_addr;
        fastcgi_param X-Real-IP $realip_remote_addr;
        fastcgi_param X-Forwarded-For $http_x_forwarded_for;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTPS on;
        internal;
    }

    # Block any other PHP files explicitly (defense in depth)
    location ~ \.php$ {
        return 404;
    }

    # Long-cache fingerprinted JS/CSS assets
    location ~* \.(js|css)$ {
        access_log off;
        log_not_found off;
        expires 1y;
        add_header Cache-Control "public, no-transform";
        add_header CF-Cache-Status "BYPASS";
        brotli_static on;
        gzip_static on;
        try_files $uri$args $uri =404;
    }

    # Long-cache other static asset types
    location ~* \.(ogg|ogv|svg|svgz|eot|otf|woff|woff2|mp4|ttf|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf|webp)$ {
        access_log off;
        log_not_found off;
        expires 1y;
        add_header Cache-Control "public";
    }

    # (Optional) Fast deny common noisy probes (uncomment as desired)
    # location = /wp-login.php { return 404; }
    # location = /xmlrpc.php { return 404; }

    # (Optional) Block hidden files except ACME challenges
    location ~ /\.(?!well-known) {
        deny all;
    }

    error_log  /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
