<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         failOnDeprecation="true"
         failOnNotice="true"
         failOnWarning="true"
         executionOrder="default"
         resolveDependencies="true"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".phpunit.cache"
>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
        <!-- Enable pcov if installed; fall back to xdebug if user runs with XDEBUG_MODE=coverage -->
        <env name="PCOV_ENABLED" value="1" />
        <env name="XDEBUG_MODE" value="coverage" />
        <!-- Ignore vendor deprecations we cannot fix (Symfony 7.4+ â†’ 8.0 migration in progress in vendor packages) -->
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="max[self]=0&amp;ignoreFile=./tests/allowed-deprecations.txt" />
    </php>

    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
        <testsuite name="Functional">
            <directory>tests/Functional</directory>
        </testsuite>
        <testsuite name="LiveComponents">
            <directory>tests/Twig</directory>
        </testsuite>
    </testsuites>

    <!-- Removed invalid attribute 'processUncoveredFiles'. PHPUnit 12 requires different config;
         include/exclude logic handled in <source>. -->
    <coverage>
        <report>
            <clover outputFile="public/coverage/clover.xml"/>
            <html outputDirectory="public/coverage/html"/>
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>

    <source ignoreSuppressionOfDeprecations="true"
            ignoreIndirectDeprecations="true"
            restrictNotices="true"
            restrictWarnings="true"
    >
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <!-- Exclude Admin classes from coverage: mostly presentation/config glue;
                 excluding them speeds analysis and focuses mutation & coverage budgets on domain logic. -->
            <directory>src/Admin</directory>
            <!-- Exclude test infrastructure (Factories, Stories) from coverage: these are test helpers,
                 not production code. Including them dilutes meaningful coverage metrics. -->
            <directory>src/Factory</directory>
            <directory>src/Story</directory>
            <!-- Exclude test-only clock implementations: FixedClock and MutableClock are only used
                 in test environment (when@test service override). AppClock is production code and remains covered. -->
            <file>src/Time/FixedClock.php</file>
            <file>src/Time/MutableClock.php</file>
            <!-- Exclude one-time conversion utility: BlockToTwigComponentCommand is a migration tool
                 for converting Sonata Blocks to TwigComponents, not production code. -->
            <file>src/Command/BlockToTwigComponentCommand.php</file>
        </exclude>

        <deprecationTrigger>
            <method>Doctrine\Deprecations\Deprecation::trigger</method>
            <method>Doctrine\Deprecations\Deprecation::delegateTriggerToBackend</method>
            <function>trigger_deprecation</function>
        </deprecationTrigger>
    </source>

    <extensions>
        <bootstrap class="Symfony\Component\Panther\ServerExtension" />
        <bootstrap class="Zenstruck\Foundry\PHPUnit\FoundryExtension" />
        <bootstrap class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
        <bootstrap class="App\Tests\Tools\DoctrineInstrumentationExtension" />
    </extensions>
</phpunit>
