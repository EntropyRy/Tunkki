{% block timetable_to_page %}
    {% set page_links = true %}
    {{ block('timetable') }}
{% endblock %}
{% block timetable_with_genre %}
    {% set page_links = false %}
    {% set genre = true %}
    {{ block('timetable') }}
{% endblock %}
{% block timetable %}
    {% set last = null %}
    {% set music_bios = event.MusicArtistInfos %}
    {% if music_bios|length > 0 %}
        {% if event.multiday == true %}
            {% set datestring = 'E, HH:mm' %}
        {% else %}
            {% set datestring = 'HH:mm' %}
        {% endif %}
        <div class="row g-0">
            {% for stage, infos in music_bios %}
                <div class="col-12 {% if music_bios|length > 1 %}{# is more than one stage #} col-md-6{% endif %}">
                    <h4 class="artists-heading">
                        {{ 'Timetable'|trans }}
                        {% if stage %}@ {{ stage }}{% endif %}
                    </h4>
                    <ul>
                        {% for info in infos %}
                            {% set artist = info.artistClone %}
                            {% set name = (artist.name|split(' for')).0 %}
                            {% if last is defined %}
                                {% if info.timediff(last) > 4 and event.multiday %}<hr>{% endif %}
                                {% if last != info.StartTime %}
                                    <li>
                                        {{ info.StartTime|format_datetime(pattern: datestring) }}:
                                    {% endif %}
                                {% endif %}
                                {% if info.StartTime is not empty %}
                                    {% if last is defined %}
                                        {% if last == info.StartTime %}B2B{% endif %}
                                    {% endif %}
                                    <a href="{% if frontpage|default(false) %}{{ path('entropy_event_slug', {slug: event.url, year: event.eventdate|date('Y')}) }}{% elseif page_links|default(false) %}{{ path('entropy_event_artists', {slug: event.url, year: event.eventdate|date('Y')}) }}{% endif %}#{{ artist.type|lower }}-{{ name|slug }}">{{ name }}</a>
                                {% if artist.type == 'Live' %}(Live){% endif %}
                                {% if genre|default(null) %}
                                    <i class="fw-lighter"> ({{ artist.genre }})</i>
                                {% endif %}
                            {% endif %}
                            {% set last = info.StartTime %}
                            {% if last is defined %}
                                {% if last != info.StartTime %}</li>{% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
