{% block event %}
    {% if event.url is null and event.externalUrl %}
        {{ block('event_head') }}
    {% else %}
        {% if event.url and not event.externalUrl %}
        <a href="{{ path('entropy_event_slug',{'slug': event.url, 'year': event.eventdate|date('Y')}) }}">
        {% else %}
        <a href="{{ path('entropy_event',{'id': event.id}) }}">
        {% endif %}
        {{ block('event_head') }}
        </a>
    {% endif %}
    <small>{{ block('published_and_updated') }}</small>
    {% if event.picture is not null and event.picturePosition == 'right' %}
    <div class="row">
        <div class="col-md-8 order-1 order-md-0">
        {{ block('event_frontpage_content')}}
        </div>
        <div class="col-md-4 order-0 order-md-1">
        {{ block('event_media') }}
        </div>
    </div>
    {% else %}
        {{ block('event_frontpage_content')}}
    {% endif %}
{% endblock %}
{% block event_head_reverse %}
    {{ block('event_banner_media') }}
    <small>{{ block('published_and_updated') }}</small>
    {{ block('event_name') }}
{% endblock %}
{% block published_and_updated %}
    {{ 'released'|trans }}: {{ event.publishDate|date() }}
    {% if event.updatedAt and event.updatedAt|date('Y') != '-0001' %}
        {% if event.publishDate|date('d.m') < event.updatedAt|date('d.m') %} -- {{ 'updated'|trans }}: {{event.updatedAt|date }}
    {% endif %}
    {% endif %}
{% endblock %}
{% block event_head %}
    {{ block('event_name') }}
    {{ block('event_banner_media') }}
{% endblock %}
{% block event_name %}
{% set name_attr = 'name_attribute'|trans %}
<h3>{{ attribute(event, name_attr) }}{% if event.type != 'announcement' %} - {{ event.eventdate|date() }}{% endif %}
    {% if event.cancelled %}*{{ 'cancelled'|trans }}*{%endif%}
    {% if event.sticky and app.user %}<i style="font-size: 1rem;" class="fas fa-thumbtack float-right"></i>{% endif %}
</h3>
{% endblock %}
{% block event_banner_media %}
    {% if event.picture is not null and event.picturePosition == 'banner' %}
    {{ block('event_media') }}
    {% endif %}
{% endblock %}
{% block event_content %}
{% set frontpage = false %}
{% set content_attr = 'content_attribute'|trans %}
{{ attribute(event,content_attr)|replace({
    '{{ timetable }}': block('timetable'), 
    '{{ bios }}': block('bios'),
    '{{ vj_bios }}': block('vj_bios'),
    '{{ links }}':block('links'), 
    '{{ rsvp }}':block('RSVP') 
})|raw }}
{% if '{{ links }}' not in attribute(event,content_attr) %}
    {{ block('links') }}
{% endif %}
{% endblock %}
{% block event_frontpage_content %}
{% set frontpage = true %}
{% set content_attr = 'content_attribute'|trans %}
{{ attribute(event,content_attr)|replace({
    '{{ timetable }}': block('timetable'), 
    '{{ bios }}':'',
    '{{ vj_bios }}':'',
    '{{ links }}':block('links'), 
    '{{ rsvp }}':block('RSVP') 
})|raw }}
{% if '{{ links }}' not in attribute(event,content_attr) %}
    {{ block('links') }}
{% endif %}
{% endblock %}
{% block event_media %}
{% set name_attr = 'name_attribute'|trans %}
    <div{% if event.picture.providername == 'sonata.media.provider.youtube' %} class="video-fluid"{% endif %}>
        {% media event.picture, 'banner' with {'class':'img-fluid','title': attribute(event, name_attr)} %}
    </div>
{% endblock %}
{% block RSVP %}
{% if event.rsvpSystemEnabled %}
<div class="pt-2 pb-2">
{{'rsvp.receive_info'|trans}} <br>
    {% if app.user %}
    <a class="btn btn-primary" 
        href="{{ path('entropy_event_rsvp',{'slug': event.url, 'year': event.eventdate|date('Y')})  }}"
        >RSVP {% if app.user.member.isActiveMember %}({{ event.RSVPs|length }}){%endif%}</a>
    {% else %}
    <a class="btn btn-primary disabled" href="#">RSVP</a>
    {{'rsvp.no_user'|trans}} {% if app.request.locale == 'fi' %}<a href="/liity">Liity!</a>{% else %}<a href="/en/join-us">Join us!</a>{% endif %}
    {% endif %}
</div>
{% endif %}
{% endblock %}
{% block links %}
{% if event.attachment %}
<div class="mb-2">
<i class="fas fa-link"></i> <a href="{{ path('sonata_media_download', {'id': event.attachment.id}) }}">{{ event.attachment.name }}</a>
</div>
{% endif %}
{% if event.epics is not empty or event.links.urls.0 is defined %}
<div>
<hr>
    {% for keys in event.links %}
        {% for url in keys %}
        <span class="pr-2">
            <i class="{{ url.icon }}"></i>
            <a {% if url.open_in_new_window|default(false) %}target="_blank"{% endif %} 
                href="{{ url.url }}">{{ url.title|trans }}</a>
        </span>
        {% endfor %}
    {% endfor %}
    {% if event.epics %}
    <span class="pr-2">
        <i class="fas fa-image"></i>
        <a href="{{ event.epics }}">Epics</a>
    </span>
    {% endif %}
</div>
{% endif %}
{% endblock %}
{% block timetable %}
<ul>
{% for info in event.eventArtistInfos %}
    {% set name = info.artist.name %}
    {% if info.artistClone is null %}
        {% set artist = info.artist %}
    {% else %}
        {% set artist = info.artistClone %}
    {% endif %}
    {% if artist.type =='DJ' %}
        {% if info.StartTime is not empty %}
            {% set inserted = false %}
            {% if last is defined %}
                {% if last == info.StartTime %}
                B2B <a href="{% if frontpage %}{{ path('entropy_event_slug',{'slug': event.url, 'year': event.eventdate|date('Y')}) }}{% endif %}#{{ name }}">{{ name }}</a>
                {% set inserted = true %}
                {% endif %}
            </li>
            {% endif %}
            {% if not inserted %}
            <li>{{ info.StartTime|date('H:i')}}: 
                <a href="{% if frontpage %}{{ path('entropy_event_slug',{'slug': event.url, 'year': event.eventdate|date('Y')}) }}{% endif %}#{{ name }}">{{ name }}</a>
            {% endif %}
            {% set last = info.StartTime %}
        {% endif %}
    {% endif %}
{% endfor %}
</ul>
{% endblock %}

{% block vj_bios %}
{% set bio_attribute = 'bio_attribute'|trans %}
    {% for info in event.eventArtistInfos %}
        {% if info.StartTime is not empty %}
            {% set name = info.artist.name %}
            {% if info.artistClone is null %}
                {% set artist = info.artist %}
            {% else %}
                {% set artist = info.artistClone %}
            {% endif %}
            {% if artist.type =='VJ' %}
                {% set thecycle = loop.index0 is odd ? 'odd' : 'even' %}
                    {% if thecycle == 'even' %}
                    <div id="{{ name }}" class="col-md-12 pt-3 pb-3">
                        <div class="row">
                            <div class="col-md-5 order-sm-last pt-sm-3 order-md-first">
                                {{ block('artist_event_info') }}
                            </div>
                            <div class="col-md-7 order-sm-first order-md-last">
                                {{ block('artist_pic') }}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div id="{{ name }}" class="col-md-12 pt-3 pb-3">
                        <div class="row">
                            <div class="col-md-7 order-sm-first order-md-first">
                                {{ block('artist_pic') }}
                            </div>
                            <div class="col-md-5 order-sm-last pt-sm-3 order-md-last">
                                {{ block('artist_event_info') }}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% if not loop.last %}
                    <hr class="d-md-none">
                    {% endif %}
                {% endif %}
        {% endif %}
    {% endfor %}
{% endblock %}

