{% block user_block %}
    {% if app.user %}
        {% set _bg_class          = "bg-light-blue" %}
        {% set _logout_uri        = path('app_logout') %}
        {% set _logout_text       = 'profile.logout'|trans %}
        {% set _profile_uri       = path('entropy_user_dashboard.'~app.request.locale) %}
        {% set _profile_text      = 'entropy_user_dashboard'|trans %}
        {#% set _user_image        = sonata_user.defaultAvatar ? asset(sonata_user.defaultAvatar) : null %#}
        {# Customize this with your profile picture implementation, see below for example #}
        {#{% set _user_image  = app.user.profilePicture|default(asset(sonata_user.defaultAvatar)) %}#}
{##
        {% if is_granted('IS_IMPERSONATOR') and sonata_user.impersonating %}
            {% set _bg_class    = "bg-light-green" %}
            {% set _logout_uri  = path(sonata_user.impersonating.route, sonata_user.impersonating.parameters| merge({'_switch_user': '_exit'})) %}
            {% set _logout_text = 'switch_user_exit'|trans %}
        {% endif %}
##}
        <li style="height: auto;" class="user-header {{ _bg_class }}">
            {% if _user_image|default(false) %}
                <img src="{{ _user_image }}" class="img-circle" alt="Avatar" />
            {% endif %}
            <p>{{ app.user.member.name }}</p>
        </li>

{#
    Uncomment to add some information
        <li class="user-body">
        </li>
#}

        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ _profile_uri }}" class="btn btn-default btn-flat"><i class="fa fa-user"></i> {#{ _profile_text }#}</a>
            </div>

            <div class="pull-right">
                <a href="{{ _logout_uri }}" class="btn btn-default btn-flat"><i class="fa fa-sign-out fa-fw"></i> {{ _logout_text }}</a>
            </div>
        </li>
    {% endif %}
{% endblock %}
