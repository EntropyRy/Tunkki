{% extends '@SonataAdmin/CRUD/base_show.html.twig' %}
{% block show %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ event }}</h1>
            </div>
            <div class="col-md-12">
                <input type="button"
                       value="Print"
                       class="no-print btn btn-primary pull-right"
                       onClick="window.print()">
                {# <button class="no-print btn btn-secondary pull-right">
                    <a href="mailto:{{emails}}">Send mail to everyone</a>
                </button> #}
            </div>
            {% if nakkiBookings %}
                <h3>Contacts</h3>
                <table class="table table-sm table-striped">
                    {{ block('tablehead') }}
                    <tbody>
                        {% for nakki in nakkiBookings %}
                            {% if nakki.member %}
                                <tr>
                                    <td>
                                        <span class="">{{ nakki.member.username }}</span>
                                    </td>
                                    <td>
                                        <span class="">{{ nakki.member }}</span>
                                    </td>
                                    <td>
                                        <span class="">{{ nakki.member.email }}</span>
                                    </td>
                                    <td>
                                        <span class="">{{ nakki.member.phone }}</span>
                                    </td>
                                    <td>
                                        <span class="">{{ nakki.nakki.definition.name('fi') }}</span>
                                    </td>
                                    <td>
                                        <span class="">{{ nakki.startAt|date('H:i') }}</span>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
            <div class="col-md-12" style="page-break-after: always;">
                <input type="button"
                       value="Print"
                       class="no-print btn btn-primary pull-right"
                       onClick="window.print()">
                {# <button class="no-print btn btn-secondary pull-right">
                    <a href="mailto:{{emails}}">Send mail to everyone</a>
                </button> #}
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-xs-12">
                        <h3>
                            Timetable
                            <small class="no-print">Click to hide table and reload the page to get it back</small>
                        </h3>
                    </div>
                    {% for nakki in event.nakkikone ? event.nakkikone.nakkis : [] %}
                        <div class="col-xs-4" onClick="$(this).hide()">
                            <table class="table table-striped nakki-timetable" data-nakki-id="{{ nakki.id }}">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>{{ nakki.definition.name(app.request.locale) }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for hour in nakki.times %}
                                        <tr>
                                            <td>{{ hour|date('H:i') }}</td>
                                            <td>
                                                {% set matchingBookings = nakki.nakkiBookings|filter(b => b.startAt|date('U') == hour|date('U')) %}
                                                {% set totalSlots = matchingBookings|length %}
                                                {% if matchingBookings %}
                                                    <ul class="list-unstyled mb-0 nakki-slot-list">
                                                        {% for booking in matchingBookings %}
                                                            <li class="nakki-slot{% if not booking.member %} nakki-slot--empty{% endif %}{% if loop.index != totalSlots %} border-bottom pb-1 mb-1{% endif %}">
                                                                {% if booking.member %}
                                                                    {{ booking.member.username }}
                                                                {% else %}
                                                                    {{ '&nbsp;'|raw }}
                                                                {% endif %}
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block tablehead %}
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Nakki</th>
            <th scope="col">When</th>
        </tr>
    </thead>
{% endblock %}
