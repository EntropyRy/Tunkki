{% extends '@SonataAdmin/standard_layout.html.twig' %}
{% block sonata_admin_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ event }}</h1>
            </div>
            <div class="col-md-12">
            {% if rsvps %}
            <h3>Ilmoittautuneiden mailit ({{ rsvps|length }})</h3>
            {% for rsvp in rsvps %}
                {% if rsvp.member %}
                {{rsvp.member.email }};
                {% else %}
                {{rsvp.email}};
                {% endif %}
            {% endfor %}
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
