{% extends 'event.html.twig' %}
{% block content %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
<h1 class="text-success">You are ADMIN</h1>
{% endif %}
{{ block('responsibles') }}
{{ block('infos') }}
{% endblock %}

{% block responsibles %}
{% if responsibles|length > 0 and infos|length > 0 %}
<h3>{{ 'Responsibles'|trans }}</h3>
<table class="table table-striped
    {% if event.headerTheme == 'dark' %}
        table-dark
    {% endif %}
    ">
  <thead>
    <tr>
      <th scope="col">Nakki</th>
      <th scope="col">{{ 'Username'|trans }}</th>
      <th scope="col">{{ 'Name'|trans }}</th>
      <th scope="col">{{ 'Phone'|trans }}</th>
      <th scope="col">Email</th>
      <th scope="col">Mattermost Link</th>
    </tr>
  </thead>
  <tbody>
    {% for name, nakki in responsibles %}
      {% if nakki.responsible %}
        {% set r = nakki.responsible %}
      {% else %}
        {% set r = {'username': 'missing'|trans, 'name': '', 'phone': '', 'email': ''} %}
      {% endif %}
      <tr>
        <th scope="col">{{ name }}</th>
        <th scope="col">{{ r.username }}</th>
        <th scope="col">{{ r.name }}</th>
        <th scope="col">{{ r.phone }}</th>
        <th scope="col">{{ r.email }}</th>
        <th scope="col">
          <a class="btn btn-success"
              target="_blank" href="{{ nakki.mattermost }}">
              <i class="fa-solid fa-up-right-from-square"></i> Mattermost
          </a>
        </th>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endif %}
{% endblock %}

{% block infos %}
{% for name, nakki in infos %}
<h3>Nakki: {{ name }}
    {% if nakki.mattermost is not empty %}
        <a class="btn btn-secondary float-end"
            target="_blank" href="{{ nakki.mattermost }}">
            <i class="fa-solid fa-up-right-from-square"></i> Mattermost
        </a>
    {% endif %}
</h3>
