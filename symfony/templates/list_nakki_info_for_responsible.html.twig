      <th scope="col">{{ 'Name'|trans }}</th>
      {% if not gdpr|default(false) %}
        <th scope="col">{{ 'Phone'|trans }}</th>
        <th scope="col">Email</th>
      {% endif %}
      {% if event.requireNakkiBookingsToBeDifferentTimes %}
        <th scope="col">Time</th>
      {% endif %}
    </tr>
