{% extends sonata_block.templates.block_base %}
{% block block %}
<div class="box">
    <div class="box-header">
        <h5 class="box-title">{{'future_events'|trans}}</h5>
    </div>
    <div class="box-body">
        <ul class="fa-ul">
        {% set name = 'name_attribute'|trans %}
        {% for event in events %}
        <li><span class="fa-li"><i class="fas fa-link"></i></span>
            <a href="
            {% if event.url %}
            {{ path('entropy_event_slug',{'slug': event.url, 'year': event.eventdate|date('Y')}) }}
            {% else %}
            {{ path('entropy_event',{'id': event.id}) }}
            {% endif %}">{{ attribute(event,name) }} - {{ event.eventDate|date() }}</a>
            </li>
        {% else %}
        <li class="fa-li"><i class="fas fa-bullhorn"></i> {{ 'stay_tuned'|trans}}</li>
        {% endfor %}
        </ul>
    </div>
</div>        
{% endblock %}
