{% extends sonata_block.templates.block_base %}
{% block block %}
<div class="box">
    <div class="box-header">
        <h4 class="box-title">{{'future_events'|trans}}</h4>
    </div>
    <div class="box-body">
        <ul>
        {% set name = 'name_attribute'|trans %}
        {% for event in events %}
            <li><a href="{{ path('entropy_event', {'id':event.id}) }}">{{ attribute(event,name) }} - {{ event.eventDate|date() }}</a>
        {% else %}
            {{ 'stay_tuned'|trans}}
        {% endfor %}
        </ul>
    </div>
</div>        
{% endblock %}
