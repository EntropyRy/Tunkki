{% use 'pieces/event.html.twig' %}
{%- block menu %}
    {% if app.user and event is not defined %}
        {% set theme = app.user.member.theme %}
    {% elseif event is defined %}
        {% set theme = event.headerTheme %}
    {% else %}
        {% set theme = 'light' %}
    {% endif %}
    <nav class="navbar navbar-expand-lg g-4 {{ theme == 'dark' ? 'navbar-dark' : 'navbar-light' }}">
        <div class="container-fluid">
            <a class="navbar-brand d-lg-none d-inline-block"
               href="/{% if app.request.locale == 'en' %}en{% endif %}">
                <img src="{{ asset('/images/header-logo-text.svg') }}" width="auto" height="45" alt="Entropy">
            </a>
            <span class="d-lg-none">
                {{ block('mobile_locale') }}
                {% if not app.user %}
                    | <a href="{{ path('app_login') }}"><twig:ux:icon name="login" height="1em" width="1em" /> {{ 'login'|trans|capitalize }}</a>
                {% endif %}
            </span>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                {% set menu = knp_menu_get('mainMenu', [], {locale: app.request.locale}) %}
                {{ knp_menu_render(menu) }}
                <ul class="navbar-nav d-none d-lg-flex">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <twig:ux:icon name="login" height="1em" width="1em" />
                                {{ 'login'|trans|capitalize }}</a>
                        </li>
                    {% endif %}
                    {{ block('locale') }}
                </ul>
            </div>
        </div>
    </nav>
    {{ include('menu/user_menu.html.twig') }}
{% endblock -%}
{% block locale %}
    {% if app.request.locale == 'fi' %}
        <li class="nav-item current">
            <span class="nav-link">FI</span>
        </li>
        <li class="nav-item">
            <a class="nav-link"
               href="{{ localized_url('en', page.id|default(null)) }}">EN</a>
        </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link"
               href="{{ localized_url('fi', page.id|default(null)) }}">FI</a>
        </li>
        <li class="nav-item current">
            <span class="nav-link">EN</span>
        </li>
    {% endif %}
{% endblock %}
{%- block mobile_locale %}
    {% if app.request.locale == 'fi' %}
        <span>FI</span> |
        <a href="{{ localized_url('en', page.id|default(null)) }}">EN</a>
    {% else %}
        <a href="{{ localized_url('fi', page.id|default(null)) }}">FI</a> |
        <span>EN</span>
    {% endif %}
{% endblock -%}
