{% extends 'onecolumn.html.twig' %}
{% block title %}
{{bookingdata.name}} - {{ bookingdata.date }}
{% endblock %}
{% block content %}
<div class="col-md-12">
    <input type="button" value="Print" class="no-print btn btn-primary float-end" onClick="window.print()">
    {% set loc = 'content'~((app.request.locale)|capitalize) %}
{{attribute(contract, loc)|raw }}
<h1>{{ bookingdata.name }} - {{ bookingdata.date }}
</h1>
{% if bookingdata.packages %}
<h3 style="text-transform: capitalize;">{{ 'packages'|trans }}</h3>
    {% for package in bookingdata.packages %}
    <input type="checkbox"><label>{{ package }}:</label>
    <ul class="list-unstyled">
        {% for item in package.items %}
        <li>
            {{ block('item') }}
        </li>
        {% endfor %}
    </ul>
    {% endfor %}
{% endif %}
{% if bookingdata.items %}
<h3 style="text-transform: capitalize;">{{ 'items'|trans }}</h3>
    {% for item in bookingdata.items %}
        {{ block('item') }}
    {% endfor %}
{% endif %}
{% if bookingdata.accessories %}
    <h3 style="text-transform: capitalize;">{{ 'accessories'|trans }}</h3>
    <ul class="list-unstyled">
    {% for item in bookingdata.accessories %}
    <li>
        <input type="checkbox">
            <label><span class="lead">{{item.count}}</span> X {{ item.name }}</label>
            {% if item.name.compensationPrice %}
                <span class="float-right">{{ item.name.compensationPrice }} €/pcs</span>
            {% endif %}
    </li>
    {% endfor %}
    </ul>
{% endif %}
{% if renter %}
<hr>
<h3 style="text-transform: capitalize;">{{ 'renter'|trans }}</h3>
{{ renter.name }}<br>
{% if renter.organization %}{{ renter.organization }}<br>{% endif %}
{% if renter.phone %}{{ renter.phone }}<br>{% endif %}
{{ renter.email }}
<hr>
<div class="text-center">{{'Total rent price'|trans}}: <span>{{ bookingdata.actualTotal}}€</span></div>
<hr>
<h3>Allekirjoitus</h3>
<div style="height: 260px">
    {% if bookingdata.renterSignature is empty %}
        <canvas class="canvas" style="touch-action: none; user-select: none;" width="800" height="260"></canvas>
    {% endif %}
    <div id="signature">
        {% if bookingdata.renterSignature is not empty %}
        <img class="img-fluid" src="{{ bookingdata.renterSignature }}">
        {% endif %}
    </div>
</div>
<div class="consent_form">
{% if bookingdata.renterSignature is empty %}
    <button style="display: none;" class="btn btn-secondary clearCanvas">Poista ja tee uusi allekirjoitus</button>
    <button class="btn btn-primary saveCanvas">Tallenna allekirjoitus</button>
{% endif %}
<hr>
{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
</div>
    <input type="button" value="Print" class="no-print btn btn-primary float-end" onClick="window.print()">
</div>
{% endif %}
{% endblock %}

{% block item %}
        <div class="form-check">
            <input type="checkbox">
            <label>{{ item }},
                <small>{% if item.Manufacturer %}Manufacturer: {{ item.Manufacturer }},{% endif %}
                {% if item.model %}Model: {{item.model}},{% endif %}
                {% if item.serialNumber %}S/N: {{ item.serialNumber }}{%endif%}</small>
            </label>
            {% if item.compensationPrice %}
                <span class="float-right">{{ item.compensationPrice }} €</span>
            {% endif %}
            {% for file in item.files %} 
            <span class="no-print">- {{ file.downloadLink|raw }}</span> 
            {% endfor %}
        </div>
{% endblock %}

