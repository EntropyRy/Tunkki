{% extends 'onecolumn.html.twig' %}

{% block content %}
<div class="col-xl-6 col-md-10 mx-auto">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{'logged_in_as'|trans }} {{ app.user.username }} <a class="btn btn-secondary" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> {{'profile.logout'|trans}}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{'Choose login method'|trans}}</h1>
    <div class="col-12">
        <a class="btn btn-lg btn-primary w-100" href="{{ path('_entropy_mattermost_auth') }}">
            <img height="23" src="{{ asset('/images/mattermost-logo.svg') }}"> {{ 'Mattermost login'|trans }}
        </a>
    </div>
    <div class="linetext">
        <span>{{'OR'|trans}}</span>
    </div>
    <label for="inputEmail">{{ 'email'|trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">{{ 'password'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <div class="d-flex flex-row justify-content-around">
        <div class="flex-fill">
            <a class="btn btn-secondary" href="{{ path('app_forgot_password_request') }}">{{ 'forgot_password'|trans }}</a>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-sign-in-alt"></i> {{ 'sign_in'|trans }}
            </button>
        </div>
    </div>
</form>
</div>
{% endblock %}
