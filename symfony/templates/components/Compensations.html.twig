<div class="box">
    <div class="box-header">
        <h5 class="box-title">{{ 'profile.paid_renting_rewards'|trans }}</h5>
    </div>
    <div class="box-body">
        {% for reward in app.user.rewards|reverse|slice(0, 5) %}
            {% if reward.PaidDate %}
                {{ reward.PaidDate|date('d.m.Y') }}: {{ reward.Evenout }}â‚¬
                <br>
            {% else %}
                {{ 'profile.next_reward_is_bubbling_under'|trans }}
                <br>
            {% endif %}
        {% else %}
            {{ 'profile.no_renting_rewards'|trans }}
        {% endfor %}
    </div>
</div>
