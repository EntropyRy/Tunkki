<div class="box">
    <div class="box-header">
        <h5>{{ 'block.stats.name'|trans }}</h5>
    </div>
    <div class="box-body">
        <dl class="row">
            {% for name, stat in this.stats %}
                <dt class="col-10">{{ name|trans }}</dt>
                <dd class="col-2 text-end">
                    {{ stat }}
                </dd>
            {% endfor %}
            {% if app.user.member.isActiveMember %}
                <dt class="col-10">{{ 'Kerde door opened by you'|trans }} ({{ 'times'|trans }})</dt>
                <dd class="col-2 text-end">
                    {{ app.user.member.doorLogs|length }}
                </dd>
            {% endif %}
        </dl>
    </div>
</div>
